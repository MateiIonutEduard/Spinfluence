@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Account/AccountLayout.cshtml";
}
<br>
<br>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/js/login.js"></script>
<form class="form-signin" id="signin" method="post">
    <img class="mb-4" src="/images/spin.png" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="address" class="sr-only">Email address</label>
    <input type="email" id="address" class="form-control" placeholder="Email address" required autofocus><br/>
    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" class="form-control" placeholder="Password" required>
    <a href="/Account/Recover" class="nav-link text-dark">Forgot Password?</a>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <a class="btn btn-lg btn-outline-info btn-block" href="/Account/Signup">Sign up</a>
    <p class="mt-5 mb-3 text-muted">&copy; 2023</p>
</form>